set nocompatible

filetype plugin indent on
syn on

set nu
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent

set ruler
set rulerformat=%60(%t%=\:b%n%y%m%r%w\ %l,%c%V\ %P%)

set hlsearch
set incsearch
set ignorecase
set smartcase

set t_Co=256
set mouse=a

colorscheme darkbone

let g:SuperTabMappingForward = '<s-tab>'
let g:SuperTabMappingBackward = "<s-c-space>"
let g:SuperTabMappingTabLiteral = "<tab>"

